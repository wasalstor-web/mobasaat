#!/usr/bin/env node

/**
 * AI Agent - ุณูุฑุจุช ุจุณูุท ููุณูุฑูุฑ
 * ูุนูู ููููู ุฐูู ุนูู ุณูุฑูุฑู ููุชุตู ุจุงูููุตุฉ ุงูุฑุฆูุณูุฉ
 * 
 * ุงูุชุซุจูุช:
 * 1. ุงุฑูุน ูุฐุง ุงูููู ุนูู ุณูุฑูุฑู
 * 2. ุดุบูู ุจุงูุฃูุฑ: node ai-agent-simple.js
 * 3. ุงูุณูุฑุจุช ุณูุดุชุบู ุนูู ุงููููุฐ 3000
 */

const http = require('http');
const { exec } = require('child_process');
const crypto = require('crypto');

// ========== ุงูุฅุนุฏุงุฏุงุช ==========
const PORT = process.env.PORT || 3000;
// Lazy-load crypto only when API_KEY is not provided (performance optimization)
const API_KEY = process.env.API_KEY || (() => {
  return crypto.randomBytes(32).toString('hex');
})();

// Maximum request body size (1MB) to prevent memory exhaustion
const MAX_BODY_SIZE = 1024 * 1024;

// ุงูุฃูุงูุฑ ุงููุณููุญ ุจูุง ููุท (ููุฃูุงู)
const ALLOWED_COMMANDS = [
  'ls', 'ls -la', 'ls -lh',
  'pwd', 'whoami', 'date', 'uptime',
  'df -h', 'free -m', 'top -bn1',
  'ps aux', 'netstat -tulpn',
  'pm2 list', 'pm2 status',
  'node --version', 'npm --version',
  'git --version'
];

// Pre-build command validation Set for O(1) lookup (performance optimization)
const ALLOWED_COMMANDS_SET = new Set(ALLOWED_COMMANDS);
// Pre-build prefix map for commands that can have arguments
const ALLOWED_COMMAND_PREFIXES = ALLOWED_COMMANDS
  .filter(cmd => cmd.includes(' '))
  .map(cmd => cmd.split(' ')[0]);
const ALLOWED_COMMAND_PREFIXES_SET = new Set(ALLOWED_COMMAND_PREFIXES);

// ========== ุงูุณูุฑูุฑ ==========
const server = http.createServer((req, res) => {
  // Set request timeout to prevent hanging connections (performance optimization)
  req.setTimeout(35000, () => {
    if (!res.headersSent) {
      res.writeHead(408, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ error: 'Request timeout' }));
    }
    req.destroy();
  });
  
  // CORS Headers
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type, Authorization');
  
  if (req.method === 'OPTIONS') {
    res.writeHead(200);
    res.end();
    return;
  }

  // ========== Health Check ==========
  if (req.url === '/health' && req.method === 'GET') {
    res.writeHead(200, { 'Content-Type': 'application/json' });
    res.end(JSON.stringify({
      status: 'healthy',
      timestamp: new Date().toISOString(),
      uptime: process.uptime()
    }));
    return;
  }

  // ========== Send Message ==========
  if (req.url === '/send' && req.method === 'POST') {
    // ุงูุชุญูู ูู API Key
    const authHeader = req.headers['authorization'];
    if (!authHeader || authHeader.replace('Bearer ', '') !== API_KEY) {
      res.writeHead(401, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ error: 'Unauthorized' }));
      return;
    }

    let body = '';
    req.on('data', chunk => { body += chunk.toString(); });
    req.on('end', () => {
      try {
        const { message, recipient, metadata } = JSON.parse(body);
        
        // ุงูุชุญูู ูู ุงูุฑุณุงูุฉ
        if (!message) {
          res.writeHead(400, { 'Content-Type': 'application/json' });
          res.end(JSON.stringify({ error: 'Message is required' }));
          return;
        }

        // ูุนุงูุฌุฉ ุงูุฑุณุงูุฉ
        const messageData = {
          id: crypto.randomBytes(16).toString('hex'),
          message: message,
          recipient: recipient || 'default',
          metadata: metadata || {},
          timestamp: new Date().toISOString(),
          status: 'sent'
        };

        // ุชุณุฌูู ุงูุฑุณุงูุฉ
        console.log('๐ค ุฑุณุงูุฉ ุฌุฏูุฏุฉ:', JSON.stringify(messageData, null, 2));

        res.writeHead(200, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({
          success: true,
          data: messageData
        }));

      } catch (error) {
        res.writeHead(400, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ error: 'Invalid JSON' }));
      }
    });
    return;
  }

  // ========== Execute Command ==========
  if (req.url === '/execute' && req.method === 'POST') {
    // ุงูุชุญูู ูู API Key
    const authHeader = req.headers['authorization'];
    if (!authHeader || authHeader.replace('Bearer ', '') !== API_KEY) {
      res.writeHead(401, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ error: 'Unauthorized' }));
      return;
    }

    // Use array to collect chunks (more efficient than string concatenation)
    const chunks = [];
    let totalSize = 0;
    
    req.on('data', chunk => {
      totalSize += chunk.length;
      
      // Prevent memory exhaustion from large payloads
      if (totalSize > MAX_BODY_SIZE) {
        req.destroy();
        res.writeHead(413, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ error: 'Request body too large' }));
        return;
      }
      
      chunks.push(chunk);
    });
    
    req.on('end', () => {
      try {
        // Efficient buffer concatenation
        const body = Buffer.concat(chunks).toString();
        const { command } = JSON.parse(body);
        
        // ุงูุชุญูู ูู ุงูุฃูุฑ
        if (!command) {
          res.writeHead(400, { 'Content-Type': 'application/json' });
          res.end(JSON.stringify({ error: 'Command is required' }));
          return;
        }

        // Optimized command validation using Set (O(1) lookup instead of O(n))
        const trimmedCommand = command.trim();
        let isAllowed = ALLOWED_COMMANDS_SET.has(trimmedCommand);
        
        // Check if command starts with an allowed prefix
        if (!isAllowed) {
          const commandBase = trimmedCommand.split(' ')[0];
          if (ALLOWED_COMMAND_PREFIXES_SET.has(commandBase)) {
            // Verify against full patterns
            isAllowed = ALLOWED_COMMANDS.some(allowed => 
              trimmedCommand === allowed || trimmedCommand.startsWith(allowed + ' ')
            );
          }
        }

        if (!isAllowed) {
          res.writeHead(403, { 'Content-Type': 'application/json' });
          res.end(JSON.stringify({ 
            error: 'Command not allowed',
            allowedCommands: ALLOWED_COMMANDS
          }));
          return;
        }

        // ุชูููุฐ ุงูุฃูุฑ
        exec(command, { timeout: 30000, maxBuffer: 1024 * 1024 }, (error, stdout, stderr) => {
          if (error) {
            res.writeHead(500, { 'Content-Type': 'application/json' });
            res.end(JSON.stringify({ 
              success: false,
              error: error.message,
              stderr: stderr
            }));
            return;
          }

          res.writeHead(200, { 'Content-Type': 'application/json' });
          res.end(JSON.stringify({
            success: true,
            output: stdout,
            stderr: stderr || null,
            timestamp: new Date().toISOString()
          }));
        });

      } catch (error) {
        res.writeHead(400, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ error: 'Invalid JSON' }));
      }
    });
    
    // Handle request errors
    req.on('error', (error) => {
      console.error('Request error:', error);
      if (!res.headersSent) {
        res.writeHead(400, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ error: 'Request error' }));
      }
    });
    
    return;
  }

  // ========== Not Found ==========
  res.writeHead(404, { 'Content-Type': 'application/json' });
  res.end(JSON.stringify({ error: 'Not found' }));
});

// ========== ุชุดุบูู ุงูุณูุฑูุฑ ==========
server.listen(PORT, () => {
  console.log('=================================');
  console.log('๐ค AI Agent ุจุฏุฃ ุงูุนูู!');
  console.log('=================================');
  console.log(`๐ ุงููููุฐ: ${PORT}`);
  console.log(`๐ API Key: ${API_KEY}`);
  console.log('');
  console.log('๐ ุงุญูุธ ูุฐุง ุงูููุชุงุญ ูุงุณุชุฎุฏูู ูู ุฑุฃุณ Authorization');
  console.log('');
  console.log('โ ุงูุฃูุงูุฑ ุงููุณููุญ ุจูุง:');
  ALLOWED_COMMANDS.forEach(cmd => console.log(`   - ${cmd}`));
  console.log('');
  console.log('๐ ุงูุฑูุงุจุท:');
  console.log(`   - Health Check: http://localhost:${PORT}/health`);
  console.log(`   - Execute: http://localhost:${PORT}/execute`);
  console.log(`   - Send Message: http://localhost:${PORT}/send`);
  console.log('=================================');
});

// ูุนุงูุฌุฉ ุงูุฃุฎุทุงุก
process.on('uncaughtException', (error) => {
  console.error('โ ุฎุทุฃ:', error);
});

process.on('SIGTERM', () => {
  console.log('๐ ุชููู ุงูุณูุฑูุฑ...');
  server.close(() => {
    console.log('โ ุชู ุฅููุงู ุงูุณูุฑูุฑ');
    process.exit(0);
  });
});
